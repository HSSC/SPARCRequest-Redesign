!!!
%html
  %head
    %title
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = favicon_link_tag asset_path('favicon.ico')
  %body
    = render 'layouts/header'
    #contents
      = content_for?(:content) ? yield(:content) : yield
    = render 'layouts/footer'
