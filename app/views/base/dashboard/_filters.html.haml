%aside.card.sticky-top#protocolFilters
  .card-header.bg-white
    .dropdown.toggle-hover
      %button.btn.btn-lg.btn-block.btn-success.dropdown-toggle#newProtocolButton{ type: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' } }<
        = icon('fas', 'plus mr-2')
        = 'Start a New Protocol'
      .dropdown-menu{ aria: { labelledby: 'newProtocolButton' } }
        = link_to details_protocol_path(type: 'Study'), class: 'dropdown-item' do
          = 'New Research Study'
          = icon('fas', 'question-circle ml-1 text-primary', title: 'A Research Study with defined aims and outcomes', data: { toggle: 'tooltip', placement: 'right' })
        = link_to details_protocol_path(type: 'Project'), class: 'dropdown-item' do
          = 'New Project'
          = icon('fas', 'question-circle ml-1 text-primary', title: 'Non-study-specific service requests or anything that is not a Research Study', data: { toggle: 'tooltip', placement: 'right' })
  %h4.card-header.bg-white.text-center
    = 'Filter Protocols'
  .card-body.pb-0
    %form.form#filterForm
      .form-group
        = text_field_tag :search, '', class: 'form-control', placeholder: 'Search for a protocol...'
      .form-group
        = select_tag :status, options_for_select(['Draft', 'Complete', 'Submitted']), title: 'Status', class: 'selectpicker', multiple: true
      .form-group
        = select_tag :status, options_for_select(['Org1', 'Org2', 'Org3']), title: 'Organization', class: 'selectpicker', multiple: true
      .form-group
        = select_tag :status, options_for_select(['Andrew Cates', 'Leila Forney', 'Wenjun He']), title: 'Owner', class: 'selectpicker', multiple: true
      .form-row
        .form-group.col-6
          = check_box_tag :archived, true, false, data: { toggle: 'toggle', on: 'Archived', off: 'Unarchived' }
        .form-group.col-6
          = check_box_tag :admin_protocols, true, false, data: { toggle: 'toggle', on: 'Your   Protocols', off: 'Admin Protocols' }
      .form-group
        = link_to 'Filter', 'javascript:void(0)', class: 'btn btn-block btn-primary'
      .form-row
        .form-group.col-6
          = link_to 'javascript:void(0)', class: 'btn btn-block btn-link' do
            = icon('far', 'save mr-2')
            = 'Save'
        .form-group.col-6
          = link_to 'javascript:void(0)', class: 'btn btn-block btn-link' do
            = icon('fas', 'redo mr-2')
            = 'Reset'
  %h4.card-header.card-footer.bg-white.text-center
    = 'Saved Filters'
  .card-body
    .list-group.list-group-flush#recentFilters
      .list-group-item
        = link_to 'Test Filter', 'javascript:void(0)', title: 'Apply Filter'
        = link_to 'javascript:void(0)', class: 'text-danger float-right' do
          = icon('fas', 'times')
      .list-group-item
        = link_to 'Filterrific', 'javascript:void(0)', title: 'Apply Filter'
        = link_to 'javascript:void(0)', class: 'text-danger float-right' do
          = icon('fas', 'times')
      .list-group-item
        = link_to 'Unfiltered', 'javascript:void(0)', title: 'Apply Filter'
        = link_to 'javascript:void(0)', class: 'text-danger float-right' do
          = icon('fas', 'times')
